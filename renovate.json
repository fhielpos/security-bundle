{
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies", "renovate"],
  "dependencyDashboard": true,
  "ignorePaths": [
    ".github/**"
  ],
  "ignoreDeps": [
    "architect",
    "zricethezav/gitleaks-action",
    "actions/setup-go"
  ],
  "packageRules": [
      {
        "matchPackagePatterns": ["^giantswarm"],
        "excludePackageNames": ["giantswarm/trivy-operator", "giantswarm/kyverno", "giantswarm/falco", "giantswarm/jiralert", "giantswarm/trivy", "giantswarm/starboard-exporter-app", "kyverno-policies-app"]
      }
  ],
  "regexManagers": [
    {
      "fileMatch": ["^helm\\/.+\\/values\\.yaml$"],
      "matchStringsStrategy": "recursive",
      "matchStrings": ["chartName: (?<depName>.*)\n\\s*catalog: .*\n\\s*enabled: .*\n\\s*namespace: .*\n\\s*version: (?<currentValue>.*?)\n"],
      "packageNameTemplate": "giantswarm/{{{depName}}}-app",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    },
    {
      "fileMatch": ["^helm\\/.+\\/values\\.yaml$"],
      "matchStringsStrategy": "recursive",
      "matchStrings": ["chartName: (?<depName>.*)\n\\s*catalog: .*\n\\s*enabled: .*\n\\s*namespace: .*\n\\s*version: (?<currentValue>.*?)\n"],
      "packageNameTemplate": "giantswarm/{{{depName}}}",
      "datasourceTemplate": "github-releases",
      "extractVersionTemplate": "^v(?<version>.*)$"
    }
  ],
  "schedule": [ "after 4pm every weekday" ]
}
